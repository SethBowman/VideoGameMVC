@model Game

<h3>@Model.Title Information</h3>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Genre</th>
        <th>Release Year</th>
        <th>Platform</th>         
    </tr>
    <tr>
        <td>@Model.Id</td>
        <td>@Model.Title</td>
        <td>@Model.Genre</td>
        <td>@Model.Release_Year</td>
        <td>@Model.Platform</td>
    </tr>
</table>


<div class="text-center">
    <img src="@Model.ImageURL" style="height:300px; width: auto; border-radius: 7px; box-shadow: 0 10px 10px 0 rgba(10, 11, 14, 0.6);" />
</div>

<section style="display:flex; flex-direction: row; justify-content: space-between;">

<div style="display: block">

    @using (Html.BeginForm("UpdateGame", "Games", "Post"))
    {
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input class="btn-success" type="submit" onclick="return confirm('Update this game?')" value="Update this Game" />
    }
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteGame", "Games", "Post"))
    {
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input class="btn-danger" type="submit" onclick="return confirm('Are you sure?')" value="Delete this Game" />
    }
</div>
</section>


