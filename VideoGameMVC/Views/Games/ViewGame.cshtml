@model Game

<h3>@Model.Title Information</h3>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Genre</th>
        <th>Release Year</th>
        <th>Platform</th>         
    </tr>
    <tr>
        <td>@Model.Id</td>
        <td>@Model.Title</td>
        <td>@Model.Genre</td>
        <td>@Model.Release_Year</td>
        <td>@Model.Platform</td>
    </tr>
</table>


<div class="text-center">
    <img id="viewImg" src="@Model.ImgURL" />
</div>

<section style="display:flex; flex-direction: row; justify-content: space-between; justify-content: center; padding: 25px;">

<div style="display: block; padding-right: 10px">

    @using (Html.BeginForm("UpdateGame", "Games", "Post"))
    {
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input class="btn-primary" type="submit" onclick="return confirm('Update this game?')" value="Update this Game" style="border-radius: 10px;" />
    }
</div>

<div style="display: block; padding-left: 10px">

    @using (Html.BeginForm("DeleteGame", "Games", "Post"))
    {
        <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input class="btn-danger" type="submit" onclick="return confirm('Are you sure?')" value="Delete this Game" style="border-radius: 10px;"/>
    }
</div>
</section>


